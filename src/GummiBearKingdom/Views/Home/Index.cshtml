@{
    ViewData["Title"] = "GummiBear Kingdom";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="jumbotron header">

</div>

<div class="jumbotron pane-1">
    <div class="container">
        <div class="col-md-6">
            <h2>Gummy Bears</h2>
            <p>All of your favorite brands and more</p>
            <p>@Html.ActionLink("Shop now", "Index", "Products", null, new { @class = "btn btn-default btn-lg" })</p>
        </div>
        <div class="col-md-6">
            <img src="~/images/gummies2.jpg" />
        </div>
    </div>
</div>
<div class="jumbotron pane-2">
    <div class="container">
        <div class="col-md-6">
            <img src="~/images/gummyworms.gif" />
        </div>
        <div class="col-md-6">
            <h2>Other Gummies and Chews</h2>
            <p>Worms, burgers, stars, bottles, fish, people</p>
            <p>@Html.ActionLink("Shop now", "Index", "Products", null, new { @class = "btn btn-default btn-lg" })</p>
        </div>
    </div>
</div>